{
  "env": {
    "jasmine": true,
    "browser": true,
    "node": true,
    "es6": true
  },
  "root": true,
  "plugins": ["@typescript-eslint", "jasmine"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "rules": {
    "@typescript-eslint/no-inferrable-types": [0],
    "no-var": "error",
    "no-undef": 2,
    "no-unused-vars": 2,
    "prefer-const": "error",
    "quotes": ["error", "single"],
    "strict": [2, "global"],
    "semi": ["error", "always"],
    "no-use-before-define": ["error", { "functions": true, "classes": true }],
    "eqeqeq": [2, "smart"],
    "keyword-spacing": ["error", { "after": true }],
    "comma-spacing": ["error", { "before": false, "after": true }],
    "space-before-blocks": "error",
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ]
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "spread": true,
      "restParams": true
    }
  }
}
